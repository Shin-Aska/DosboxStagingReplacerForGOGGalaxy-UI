<Window x:Class="WpfApp2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp2"
    mc:Ignorable="d"
    Title="Dosbox Replacer" Height="450" Width="800"
    Background="Black">

    <Grid>
        <!-- Define rows: top controls, version selection, content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Top controls -->
            <RowDefinition Height="Auto" />
            <!-- DOSBox version row -->
            <RowDefinition Height="*" />
            <!-- Main content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Background -->
        <Image x:Name="Background"
            Grid.RowSpan="3" Grid.ColumnSpan="3"
            Source="/dosbox-replacer.png"
            Stretch="UniformToFill"
            Panel.ZIndex="-1" />

        <!-- Top controls -->
        <CheckBox x:Name="DosOnly"
            Content="Show DOS only games"
            Grid.Row="0" Grid.Column="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Foreground="White"
            Margin="10">
            <CheckBox.Effect>
                <DropShadowEffect />
            </CheckBox.Effect>
        </CheckBox>

        <ComboBox x:Name="GameSelection"
            Grid.Row="0" Grid.Column="1"
            Margin="10"
            Height="34"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch" />

        <Button x:Name="ChangeDosbox"
            Content="Change Dosbox"
            Grid.Row="0" Grid.Column="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10"
            Width="120" Height="34" />

        <!-- New row: DOSBox Version label + ComboBoxes -->
        <StackPanel Orientation="Horizontal"
            Grid.Row="1" Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="10">
            <Label Content="DOSBox Version:"
                Foreground="White"
                VerticalAlignment="Center"
                Margin="0,0,10,0" />
            <ComboBox x:Name="DosboxVersion"
                Width="222"
                Height="30"
                Margin="0,0,10,0" />
            <TextBox x:Name="DosboxVersionText"
                Width="222"
                Height="30"
                Margin="0,0,10,0"
                Visibility="Collapsed" />
            <Button x:Name="DosboxModeButton"
                Content="..."
                Width="30"
                Height="30"
                Margin="0,0,10,0" 
                Visibility="Collapsed" />
            <ComboBox x:Name="DosboxMode"
                Width="80"
                Height="30" />
        </StackPanel>

        <!-- Main content area -->
        <RichTextBox x:Name="GameDescription"
            Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
            Margin="20"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>